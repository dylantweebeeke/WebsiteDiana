<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteMama</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Parisienne&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom-override box-shadow" style="background-color: #ADBDFF; border-bottom: 5px solid #88498F;">
            <div class="container">
                <div class="navbar-brand">
                    <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" style="float: right; background-color: white;">
                        <span class="navbar-toggler-icon" style="color:black; display: inline-block; float: right;"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/" style="color:#88498F; font-size:20px;">Home</a>
                        </li>
                        <li class="nav-item" id="step-five">
                            <a class="nav-link" href="/BlogEntries" style=" font-size:20px; color:#88498F">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color: #88498F; font-size:20px;">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color: #88498F; font-size:20px;">Over mij</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer" style=" color: black; background-color: #F49096; border-top: 5px solid #ADBDFF;">
        <div class="container" style="text-align: center;">
            <div class="row p-4" style="display: inline-block; padding: 0!important; margin: 0;">
                <a href="https://www.facebook.com/gemeenteDH/" class="fa fa-facebook" alt="Facebook" style=" text-decoration: none;" aria-label="facebook gemeente den haag link"></a>
                <a href="https://www.instagram.com/diaanvonk13/" class="fa fa-instagram" alt="Instagram" style=" text-decoration: none;" aria-label="instagram gemeente den haag link"></a>
                <p style="font-weight:bolder;">&copy; 2021- Dylan Tweebeeke</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
